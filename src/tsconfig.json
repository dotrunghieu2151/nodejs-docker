{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "target": "es2017",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "../dist",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "lib": [
      "es6"
    ],
    "incremental": true,
    "strict": true,
    "importHelpers": true,
    "types": [
      "reflect-metadata"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "paths": {
      "@/app/*": [
        "app/*"
      ],
      "@/libs/*": [
        "libs/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
}